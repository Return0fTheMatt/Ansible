## USLIDC Standard configuration
##  maintained by Ansible, any changes may be overwritten.

[sssd]
domains = {{ ad_server_domain }}
config_file_version = 2
services = nss, pam

[domain/{{ ad_server_domain }}]
ad_domain = {{ ad_server_domain }}
krb5_realm = {{ ad_server_domain|upper }}
realmd_tags = manages-system joined-with-samba
cache_credentials = True
id_provider = ad
dyndns_update = False
krb5_store_password_if_offline = True
default_shell = /bin/bash
ldap_id_mapping = False
use_fully_qualified_names = False
fallback_homedir = /home/%u
access_provider = simple
{% if s_env|upper == "PROD" %}
{% if biz|upper == "USMI" %}
simple_allow_groups = U-{{ ansible_facts['hostname'] }}-NIX,miUS-prod-vasg
{% else %}
simple_allow_groups = U-{{ ansible_facts['hostname'] }}-NIX,rpUS-prod-vasg,hqUS-prod-vasg
{% endif %}
{% else %}
{% if biz|upper == "USMI" %}
simple_allow_groups = U-{{ ansible_facts['hostname'] }}-NIX,miUS-non-prod-vasg
{% else %}
simple_allow_groups = U-{{ ansible_facts['hostname'] }}-NIX,rpUS-non-prod-vasg,hqUS-non-prod-vasg
{% endif %}
{% endif %}
